{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe!
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			<div class="col-md-6 mx-auto">
				<h1 class="my-5 text-center">Changer le mot de passe</h1>

				{{ form_start(form) }}
				<div class="row">
					<div class="col-md-">
						{{ form_widget(form)}}
					</div>
					
				</div>

				<button type="submit" class="btn btn-primary btn-lg w-100">Apply changes</button>
				{{ form_end(form)}}


			</div>
		</div>
	</div>
{% endblock %}

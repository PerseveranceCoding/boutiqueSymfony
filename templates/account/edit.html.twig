{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			<div class="col-md-6 mx-auto">
				<h1 class="my-5">Edit Profil</h1>

				{{ form_start(form) }}
				<div class="row">
					<div class="col-md-6">
						{{ form_row(form.nom)}}
					</div>
					<div class="col-md-6">
						{{ form_row(form.prenom)}}
					</div>
					{{ form_rest(form)}}
				</div>

				<button type="submit" class="btn btn-primary btn-lg w-100">Apply changes</button>
				{{ form_end(form)}}


			</div>
		</div>
	</div>
{% endblock %}

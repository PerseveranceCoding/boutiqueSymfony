  	        <h5 class="card-title">{{ produit.titre }}</h5>
  	        <p class="card-text">{{ produit.description }}</p>
  	        <a href="#" class="btn btn-primary">{{ produit.prix }} â‚¬</a> 
  	        <a href="#" class="btn btn-secondary">Ajouter au panier</a> 
           </div>
        </div>       
        {% endfor %}
